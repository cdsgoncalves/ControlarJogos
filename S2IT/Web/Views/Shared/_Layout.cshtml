<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | S2IT</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/bootstrap/css/bootstrap")
    @Styles.Render("~/Content/font-awesome/css/font-awesome")
    @Styles.Render("~/Content/css/datatables")
    @Styles.Render("~/Content/css/site")
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <span class="logo-mini"><b>S2</b></span>
                <span class="logo-lg"><b>S2</b>IT</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@UsuarioLogado.Foto" class="user-image" alt="Foto de @UsuarioLogado.Nome">
                                <span class="hidden-xs">@UsuarioLogado.Nome</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="@UsuarioLogado.Foto" class="img-circle" alt="Foto de @UsuarioLogado.Nome">
                                    <p>
                                        @UsuarioLogado.Nome
                                        <small>@UsuarioLogado.Email</small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-right">
                                        <a href="@Url.Action("logout", "auth")" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@UsuarioLogado.Foto" class="img-circle" alt="Foto de @UsuarioLogado.Nome">
                    </div>
                    <div class="pull-left info">
                        <p>@UsuarioLogado.Nome</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">NAVEGAÇÃO</li>
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-cogs"></i> <span>Cadastros</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Usuario")"><i class="fa fa-circle-o"></i> Usuários</a></li>
                            <li><a href="@Url.Action("Index", "Jogo")"><i class="fa fa-circle-o"></i> Jogos</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    @ViewBag.TituloPagina
                    <small>@ViewBag.DescricaoPagina</small>
                </h1>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            @Html.Partial("_PartialHtmlMessages")
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Versão</b> @CoreAssembly.Version
            </div>
            <strong>
                @CoreAssembly.Copyright
                <a href="mailto:info@cgoncalves.com">@CoreAssembly.Company</a>.
            </strong> Todos os direitos reservados.
        </footer>
    </div>
    <script>
        $(document).ready(function () {
            $('.sidebar-menu').tree();
        });
    </script>
    @Scripts.Render("~/Content/js/site")
    @Scripts.Render("~/Content/js/datatables")
    @RenderSection("scripts", false)
    @Scripts.Render("~/Content/js/custom")
    <script>
        $(function () {
            if (jQuery("div.validation-summary-errors ul li[style*='none']").length > 0)
                jQuery("div.validation-summary-errors").css("display", "none");
            else
                jQuery("div.validation-summary-errors").css("display", "block");
        });
    </script>
</body>
</html>